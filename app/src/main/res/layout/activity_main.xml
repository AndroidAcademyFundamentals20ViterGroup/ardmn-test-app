<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default text font."
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="fontFamily = Roboto bold ttf"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fontFamily = Roboto bold ttf; textStyle=normal"
        android:textSize="20sp"
        android:textStyle="normal"
        app:fontFamily="@font/roboto_bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fontFamily = Roboto bold ttf; textStyle=italic"
        android:textSize="20sp"
        android:textStyle="italic"
        app:fontFamily="@font/roboto_bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fontFamily = Roboto bold ttf; textStyle=bold"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="@font/roboto_bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fontFamily = Roboto bold xml"
        android:textSize="20sp"
        app:fontFamily="@font/roboto_bold_family" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fontFamily = Roboto bold xml; textStyle = normal"
        android:textSize="20sp"
        android:textStyle="normal"
        app:fontFamily="@font/roboto_bold_family" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fontFamily = Roboto bold xml; textStyle = italic"
        android:textSize="20sp"
        android:textStyle="italic"
        app:fontFamily="@font/roboto_bold_family" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fontFamily = Roboto bold xml; textStyle = bold"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="@font/roboto_bold_family" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fontFamily = Roboto medium ttf"
        android:textSize="20sp"
        app:fontFamily="@font/roboto_medium" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fontFamily = Roboto medium italic ttf"
        android:textSize="20sp"
        app:fontFamily="@font/roboto_mediumitalic" />

</LinearLayout>